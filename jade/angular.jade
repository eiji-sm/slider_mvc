!!!
html(lang="ja", ng-app)

  head
    meta(charset="utf-8")
    title Slider MVC

    link(rel="stylesheet", href="css/raphaelicons.css", media="screen")
    link(rel="stylesheet", href="css/common.css", media="screen")

    script(src="js/lib/modernizr.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js")
    script(src="js/lib/angular.min.js")
    script(src="js/demodata.js")
    script(src="js/angular-slider.js")

  body
    #wrapper(ng-controller="mainCtrl")
      header
        h1 Angular Demo
      section#mainSlider
        ul.slideContainer
          li.slideContent(ng-repeat="number in slideLength")
            img(src="image/{{data[number].url}}", width="640")
        .arrows
          span.icon.arrowLeft(ng-click="decrease('slideNumber')", ng-class="{ac: slideNumber != 1}") <
          span.icon.arrowRight(ng-click="increase('slideNumber')", ng-class="{ac: slideNumber != 5}") =
        nav.slideNavi
          ul
            li.slideNaviList(
              ng-repeat="number in slideLength",
              ng-click="eq('slideNumber', (number + 1))",
              ng-class="{ac: slideNumber == (number + 1)}"
            )
              img(src="image/{{data[number].url}}", width="110")
      section#mainContent
        .slideDescription.ac
          h2 {{data[slideNumber - 1].title}}
          p {{data[slideNumber - 1].description}}